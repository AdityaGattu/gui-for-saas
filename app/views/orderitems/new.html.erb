<body>
  <div class="AddOrder">
    <div class="DisplayOrder">
      <div class="DisplayOrder-welcome">
        <h1>Your Orders</h1>
      </div>
        <% Menu.all.each do |menu|%>
        <div class="DisplayItem-card">
          <%= form_with(url: "/orderitems/showmenuitems", method:"post", class: "AddItem-body") do %>
            <div class="DisplayItem-container">
              <div class="menuname"><b><%=menu.id%></b></div>
              <%= hidden_field_tag 'menu_item_id', menu.id %>
              <div class="menuname"><b><%=menu.name%></b></div>
              <%= submit_tag "Show menu" , class: "placeorder"%>
            </div>
          <%end%>
        </div>
      <%end%>
    </div>
  </div>
</body>
